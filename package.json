{
  "name": "darkli",
  "version": "0.6.1",
  "description": "Darkli: small and clean lightbox script",
  "main": "dist/js/darkli.js",
  "author": "Rex Tsou <akccakccwww@gmail.com>",
  "keywords": [
    "lightbox",
    "overlay"
  ],
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/akccakcctw/darkli.git"
  },
  "bugs": {
    "url": "https://github.com/akccakcctw/darkli/issues"
  },
  "devDependencies": {
    "archy": "^1.0.0",
    "ava": "^0.23.0",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.23.6",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-eslint": "^4.0.2",
    "gulp-load-plugins": "^1.5.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-run": "^1.7.1",
    "gulp-sass": "^3.1.0",
    "nightwatch": "^0.9.20",
    "rollup": "^0.51.8",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-watch": "^4.3.1",
    "selenium-standalone": "^6.13.0",
    "uglify-js": "^3.3.14"
  },
  "scripts": {
    "test": "cross-env BABEL_ENV=test gulp lint && npm run ava",
    "ava": "cross-env BABEL_ENV=test ava --verbose",
    "ava:watch": "cross-env BABEL_ENV=test ava --verbose --watch",
    "selenium-setup": "selenium-standalone install",
    "selenium-start": "selenium-standalone start",
    "e2e": "nightwatch",
    "e2e:chrome": "nightwatch -e default",
    "e2e:firefox": "nightwatch -e firefox",
    "start": "npm run gulp",
    "gulp": "cross-env BABEL_ENV=build gulp",
    "build:js": "rollup -c",
    "compress:js": "uglifyjs dist/darkli.js -o dist/darkli.min.js -c -m --comments /^!/",
    "watch:js": "rollup -c -w -m",
    "tree": "node bin/tree.js",
    "preversion": "npm test"
  },
  "ava": {
    "files": [
      "test/unit/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
